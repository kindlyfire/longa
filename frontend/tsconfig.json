{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "./dist/",
		"rootDir": "./src/",
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": false,
		"jsx": "preserve"
	},
	"include": ["src/**/*"]
}
